                    <apex:inputField value="{!doctor.Last_Name__c}" required="true"/>
                    <apex:inputField value="{!doctor.City__c}"/>
                </apex:pageBlockSection>
                <center>
                    <apex:commandButton value="{!$Label.Search}" action="{!searchDoctors}" status="status"
