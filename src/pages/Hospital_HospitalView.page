                <div id="myMessagess">
                    <apex:outputPanel id="messages">
                        <apex:pageMessages id="messageTxt" showDetail="false"/>
                        <script>
                            var messageID = '{!$Component.messageTxt}';
                        </script>
                    </apex:outputPanel>
