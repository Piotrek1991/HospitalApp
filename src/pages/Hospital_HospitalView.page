            </apex:form>
            <apex:outputPanel id="resultsDoctors">
                <apex:form >
                <apex:pageBlockSection id="results" title="{!$Label.Results}" columns="1"
                                       rendered="{!doctorWrappers.size > 0}">
                    <apex:pageBlockTable value="{!doctorWrappers}" var="doc" columns="4"
